{
    "manifest_version": 2,
    "name": "BrainCode2017",
    "author": "Thorn",
    "description": "Wtyczka stworzona na BrainCode2017 przez zespół Thorn",
    "version": "1.0",
    "browser_action": {
        "default_icon": "img/icon-48.png",
        "default_popup": "popup.html",
        "default_title": "Wyświetl menu"
    },
    "options_page": "options.html",
    "description": "My Chrome Extension with Materialize CSS",
    "icons": {
        "16": "img/icon-16.png",
        "48": "img/icon-48.png",
        "128": "img/icon-128.png"
    },
    "permissions": [ 
        "activeTab", 
        "storage",
        "https://allegroreminderapi20170325014922.azurewebsites.net/",
        "https://api.natelefon.pl/",
        "https://allegroapi.io/"
    ],
    "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'",
    "externally_connectable": {
        "matches": [

        ]
    },
    "background": {
        "page": "background.html"
    },
    "content_scripts": [
        {
            "matches": [
                "*://*.allegro.pl/*"
            ],
            "js": [
                "js/content.js"
            ]
        },
        {
            "matches": [
                "http://allegroreminderapi20170325014922.azurewebsites.net/auth/code/*"
            ],
            "js": [
                "js/token.js"
            ]
        }
    ]
}
